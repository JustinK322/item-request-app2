<h1>Listing item_requests</h1>

<table>
  <thead>
    <tr>
      <th>Itemname</th>
      <th>Reason</th>
      <th>Price</th>
    <!--  <th>Isapproved</th>
      <th>Approvedby</th>
      <th>Approvedon</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item_requests.each do |item_request| %>
      <tr>
        <td><%= item_request.itemName %></td>
        <td><%= item_request.reason %></td>
        <td><%= item_request.price %></td>
        <!--<td><%= item_request.isApproved %></td>
        <td><%= item_request.approvedBy %></td>
        <td><%= item_request.approvedOn %></td>-->
        <td><%= link_to 'Show', item_request %></td>
        <td><%= link_to 'Edit', edit_item_request_path(item_request) %></td>
        <td><%= link_to 'Destroy', item_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

